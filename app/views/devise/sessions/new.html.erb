<h1 class="my-3">Přihlásit se</h1>

<%= render 'flash_messages' %>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                label: 'Email',
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                label: 'Heslo',
                required: false,
                input_html: { autocomplete: "current-password" } %>
    <%= f.input :remember_me, label: 'Zapamatovat', as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Přihlásit se", class: 'btn-primary' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
