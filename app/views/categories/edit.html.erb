<h1 class="my-3">
  Upravit kategorii
  <%= render partial: 'badge', locals: { category: @original_category } %>
</h1>

<%= render partial: 'breadcrumb', locals: {
  breadcrumb: {
    'Úkoly' => root_path,
    'Nastavení' => settings_path,
    'Kategorie' => categories_path,
    @original_category.title => category_path(@category),
    'Upravit kategorii' => nil,
  }
} %>

<%= render 'form' %>

<p class="mt-1">
  <%= link_to 'Zrušit', category_path(@category) %>
</p>
