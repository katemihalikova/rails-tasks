<%= simple_form_for :filter, url: tasks_filter_path, wrapper: :inline_form, html: { class: "form-inline" } do |f| %>
  Z těchto úkolů zobrazit jen úkoly s tagy
  <%= f.input :tags, collection: @tags, include_hidden: false, required: false, input_html: { class: "form-control-sm mx-2 w-auto", multiple: true, size: 3 } %>
  <%= f.hidden_field :category, value: @category ? @category.id : 0 %>
  <%= f.button :submit, "Zobrazit", class: "btn-secondary btn-sm" %>
<% end %>
